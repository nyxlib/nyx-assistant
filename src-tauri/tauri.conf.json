{
    "productName": "nyx-assistant",
    "version": "1.0.0",
    "identifier": "org.nyxlib.assistant",
    "build": {
        "beforeDevCommand": "npm run app-prod",
        "beforeBuildCommand": "npm run app-prod",
        "devUrl": "http://localhost:2468/",
        "frontendDist": "../dist/"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "height": 850,
                "width": 1500,
                "minHeight": 850,
                "minWidth": 1500,
                "visible": true,
                "maximized": false,
                "title": "Nyx Assistant",
                "decorations": false,
                "transparent": true,
                "url": "index.html"
            },
            {
                "label": "preview",
                "height": 850,
                "width": 1500,
                "minHeight": 850,
                "minWidth": 1500,
                "visible": false,
                "maximized": false,
                "title": "Preview",
                "decorations": false,
                "transparent": true,
                "url": "/#/preview/"
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "externalBin": [
            "binaries/nyx-gen"
        ],
        "targets": [
            "appimage",
            "deb",
            "dmg",
            "msi"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
